# Database Configuration
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/evimed?schema=public"

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Admin Configuration
ADMIN_LOGIN=admin
ADMIN_PASSWORD=admin123
ADMIN_NAME=Администратор

# Example values for different environments:

# Development
# DATABASE_URL="postgresql://postgres:password123@localhost:5432/evimed_dev?schema=public"
# PORT=5000
# NODE_ENV=development

# Production
# DATABASE_URL="postgresql://username:secure_password@your-db-host:5432/evimed_prod?schema=public"
# PORT=5000
# NODE_ENV=production
# JWT_SECRET=your_production_jwt_secret_key_very_long_and_secure

# Testing
# DATABASE_URL="postgresql://postgres:password123@localhost:5432/evimed_test?schema=public"
# NODE_ENV=test

# Renovatio API Integration
RENOVATIO_API_KEY=your_renovatio_api_key_here
RENOVATIO_SYNC_ENABLED=false
RENOVATIO_SYNC_CRON=0 */6 * * *

# Email Configuration
EMAIL_SERVICE=yandex
EMAIL_USER=your-email@yandex.ru
EMAIL_PASS=your-app-password
EMAIL_FROM=Evimed <noreply@evimed.ru>
EMAIL_HOST=smtp.yandex.ru
EMAIL_PORT=587
EMAIL_SECURE=false

# Verification Settings
VERIFICATION_CODE_EXPIRY_MINUTES=10
VERIFICATION_MAX_ATTEMPTS=3
VERIFICATION_CODE_LENGTH=4